<div class="container">
  <div class="header_link">
    <h3><%=@article.title%>

      <small>
          <%= link_to edit_article_path(@article) do %><i class="fa fa-pencil"></i><% end %>
          <%= link_to article_path(@article), method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class="fa fa-trash-o"></i>
          <% end %>
        </small>
    </h3>
  </div>
  <hr>
  <p><%=@article.content%></p>

<%= link_to 'Back', articles_path, :class => "btn btn-primary"%>


  <% content_for(:title) do %>
  Wikinimous - <%= @article.title %>
<% end %>
